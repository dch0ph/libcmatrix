CXX=g++

#Flags to use while testing
DEBUGFLAGS= -g
#Flags for fast final version
#DEBUGFLAGS= -DNDEBUG -O2

# Where libcmatrix lives
LIBCMATRIX=/home/devuser/libcmatrix

#Single threaded applications
LIBRARIES= -lcmatrix -lrt -lopenblas  
CXXFLAGS=-I$(LIBCMATRIX)/include $(DEBUGFLAGS)  -Wall -Wno-sign-compare -DLCM_USE_EXTERNAL

#Multi-threaded applications
#LIBRARIES= -lcmatrix_r -lrt -lopenblas  -lpthread
#CXXFLAGS= -I$(LIBCMATRIX)/include -DLCM_REENTRANT $(DEBUGFLAGS)  -Wall -Wno-sign-compare -DLCM_USE_EXTERNAL

LDFLAGS=-L$(LIBCMATRIX)/lib 

COMPILE=$(CXX) $(CXXFLAGS) -c
LINK= $(CXX) $(CXXFLAGS) $(LDFLAGS)

#Change name of binary and source code files
template: template.cc
	$(LINK) -o $@ template.cc $(LIBRARIES)
